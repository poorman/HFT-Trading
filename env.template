# HFT Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# Polygon API for market data
POLYGON_API_KEY=your_polygon_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hft_trading

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Trading Engine Configuration
ENGINE_ADDRESS=tcp://localhost:5555

# Movers Strategy Configuration
MOVERS_STRATEGY_ENABLED=true
MOVERS_BUY_THRESHOLD=5.0
MOVERS_SELL_THRESHOLD=4.5
MOVERS_INVESTMENT_AMOUNT=1000
MOVERS_CHECK_INTERVAL=10

# Server Configuration
PORT=8082
TZ=America/Chicago

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8082/api

# Linear Integration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_linear_team_id_here
LINEAR_PROJECT_ID=your_linear_project_id_here

# Slack Integration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#trading-alerts
